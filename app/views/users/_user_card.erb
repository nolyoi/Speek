  
<div class="col-xl-4">
  <!-- Card -->
  <div class="card card-cascade wider reverse">
    <!-- Card image -->
    <div class="view view-cascade overlay">
      <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Slides/img%20(70).jpg"
          alt="Card image cap">
      <a href="#!">
        <div class="mask rgba-white-slight"></div>
      </a>
    </div>
    <div class="card-avatar mx-auto d-block">
      <% if user.avatar.presence %>
        <%= image_tag user.avatar.variant(resize_to_limit: [120, 120]), class: "rounded-circle" %>
      <% else %>
        <img class="card-img-100 d-flex" src="https://mdbootstrap.com/img/Photos/Avatars/img%20(8).jpg" alt="Generic placeholder image">
      <% end %>
    </div>
    
    <!-- Card content -->
    <div class="card-body card-body-cascade text-center pt-1">
      <!-- Title -->
      <h4 class="card-title mb-0">
        <strong>@<%= user.username %></strong>
      </h4>
      <% if is_admin?(user) %>
          <span class="badge badge-pill badge-success mt-0 mb-2 z-depth-0">Admin</span>
      <% end %>
      <!-- Subtitle -->
      
      <!-- Text -->
      <p class="card-text">
        <%= user.bio %>
      </p>
      <% if current_user %>
        <% if is_following?(user) %>
          <p><%= link_to "Unfollow", user_unfollow_path(user), class: "btn btn-danger btn-sm btn-block" %></p>
        <% elsif current_user.id == user.id %>
          
        <% else%>
          <p><%= link_to "Follow", user_follow_path(user), class: "btn btn-primary btn-sm btn-block" %></p>
        <% end %>
      <% end %>

        <% if user.facebook_url != "" %>
          <a class="px-2 fa-lg fb-ic" href="<%= user.facebook_url %>"><i class="fab fa-facebook-f"></i></a>
        <% end %>
        <% if user.twitter_url != "" %>
          <a class="px-2 fa-lg tw-ic" href="<%= user.twitter_url %>"><i class="fab fa-twitter"></i></a>
        <% end %>
        <% if user.website_url != "" %>
          <a class="px-2 fa-lg li-ic" href="<%= user.website_url %>"><i class="fab fa-globe"></i></a>
        <% end %>
      
    </div>
  </div>
